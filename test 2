    <button type="button" onclick="numberOneTriangle()">enter</button>
    <script>
        function numberOneTriangle(n){
        
        var a = "";
       
        for (var i = 0; i < n; i++) {    
            
             a +="<br>";
            
                for (var j=(n-i); j < n; j++) {
            
                     a += "*";
            }
            
        }
        return a;
        }

        document.getElementById("demo").innerHTML = numberOneTriangle(9);
      
        
